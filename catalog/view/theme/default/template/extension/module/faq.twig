<style>
.panel-group .panel {
		border:none;
		box-shadow:none;
	}
	
	.panel-group{
		margin-bottom:10px;
	}
	.panel-default > .panel-heading {
		padding: 10px 15px;
		color: #212121;
		background-color: #FAFAFA;
		border:1px solid #ddd;
		box-shadow:0 1px 1px rgba(0, 0, 0, 0.05);
		border-radius:3px;
	}
	
	.panel-group.demo .panel-heading{
		border-bottom:1px solid #ddd;
	}
	.panel-title {
		font-size: 16px;
	}

	.panel-title > a {
		display: block;
		text-decoration: none;
		margin-top:0;
	}

	.more-less {
   float: right;
   color: #212121;
   font-size:20px;
   font-weight:bold;
   }

	.panel-default > .panel-heading + .panel-collapse > .panel-body {
		border-left: 1px solid #ddd;
		border-right: 1px solid #ddd;
		border-bottom: 1px solid #ddd;
		border-top:none;
		border-radius:0 0 3px 3px;
	}
.panel-group{
	border:1px solid #eee;
	border-radius:5px;
	padding:0 10px;
}
.panel-group .panel{
	margin-bottom:10px;
}
.panel-group .heading{
	margin:0;
	padding:10px;
}
</style>
<div class="myGroup">
 {% for faq_group in faq_groups %}
<div class="fq">
	<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
		<h3>{{ faq_group.title }}</h3>
			{% for faqs_data in faq_group.faqs_datas %}
			<div class="panel panel-default">
			
				<div class="panel-heading" role="tab" id="headingOne">
					<h4 class="panel-title">
						<a role="button" data-toggle="collapse" data-parent="#accordion" href="#faq{{ module }}-{{ faqs_data.faq_id }}" aria-expanded="true" aria-controls="collapseOne">
							<i class="more-less fa fa-angle-right"></i>
							{{ faqs_data.name }}
							</a>
					</h4>
				</div>	
				<div id="faq{{ module }}-{{ faqs_data.faq_id }}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingOne">
					<div class="panel-body">
						  <h5>{{ faqs_data.description }}</h5>
					</div>
				</div>
				</div>
			{% endfor %}
		</div>

	</div>
{% endfor %}
</div>
<script>
var $myGroup = $('.myGroup');
$myGroup.on('show.bs.collapse','.collapse', function() {
$myGroup.find('.collapse.in').collapse('hide');
});


function toggleIcon(e) {
        $(e.target)
            .prev('.panel-heading')
            .find(".more-less")
            .toggleClass('fa-angle-right fa-angle-down');
    }
    $('.panel-group').on('hidden.bs.collapse', toggleIcon);
    $('.panel-group').on('shown.bs.collapse', toggleIcon);


</script>		
	


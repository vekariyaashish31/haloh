{{ header }}
<div id="product-product" class="container common-shed">
	<div class="bg-color-b">
		<div class="row">
			{{ column_left }}
			{% if column_left and column_right %}
			{% set class = 'col-sm-5' %}
			{% elseif column_left or column_right %}
			{% set class = 'col-xs-12 col-sm-8 col-lg-9 col-md-9' %}
			{% else %}
			{% set class = 'col-sm-12' %}
			{% endif %}
			<div id="content" class="{{ class }}">
				{{ content_top }}
				<ul class="breadcrumb">
					{% for breadcrumb in breadcrumbs %}
					<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
					{% endfor %}
				</ul>
				<div class="row">
					<div class="col-md-12 col-sm-12 inspire-form-bg">
						{% if column_left or column_right %}
						{% set class = 'col-lg-5 col-md-6 col-xs-12' %}
						{% else %}
						{% set class = 'col-lg-4 col-md-5 col-sm-6 proimg' %}
						{% endif %}
						<div class="{{ class }}">
							{% if thumb or images %}
								<ul class="thumbnails">
									{% if product_videos %}
										<li>
											<iframe width="100%" height="486px" class="embed-responsive-item" src="{{ product_videos[0]['video_url'] }}"></iframe>
										</li>
										{% if images %}
											<div class="row">
												<li id="additional" class="owl-carousel">
													{% for image in images %}
														<a data-zoom-image="{{ image.popup }}" data-image="{{ image.popup }}"  href="{{ image.popup }}">
															<img src="{{ image.thumb }}" class="img-responsive center-block col-xs-12" alt="additional image">
														</a>
													{% endfor %}
													{% if product_videos %}
														{% for product_video in product_videos %}
														<li class="image-additional"><div class="thumbnail video_image" id="video{{ product_video['product_video_id'] }}" title="{{ product_video['title'] }}"> <img src="{{ product_video['image'] }}" title="{{ product_video['title'] }}" alt="{{ product_video['title'] }}" style="cursor:pointer"/><img src="catalog/view/theme/default/image/play.png" class="video_icon" alt="{{ product_video['title'] }}"></div></li>
													{% endfor %}
												{% endif %}
												</li>
											</div>
										{% endif %}
									{% elseif thumb %}
										<li><a class="thumbnail" href="{{ popup }}" title="{{ heading_title }}"><img data-zoom-image="{{ popup }}" src="{{ thumb }}" id="inspzoom" class="img-responsive center-block" alt="image"></a></li>
										{% if images %}
											<div class="row">
												<li id="additional" class="owl-carousel">
													{% for image in images %}
														<a data-zoom-image="{{ image.popup }}" data-image="{{ image.popup }}"  href="{{ image.popup }}">
															<img src="{{ image.thumb }}" class="img-responsive center-block col-xs-12" alt="additional image">
														</a>
													{% endfor %}
												</li>
											</div>
										{% endif %}
									{% endif %}
								</ul>
							{% endif %}
						</div>
						{% if column_left or column_right %}
						{% set class = 'col-md-6 col-lg-7 col-xs-12' %}
						{% else %}
						{% set class = 'col-lg-8 col-md-7 col-sm-6' %}
						{% endif %}
						<div class="{{ class }} product-right">
							<div class="row">
								<div class="col-lg-6 col-xs-12">
									<h1>{{ heading_title }}</h1>
									<hr class="prosp">
									<ul class="list-unstyled">
										{% if location %}
										<li><span class="text-prodecor">Seller ID</span> {{ location }}</li>
										{% endif %}
										{% if manufacturer %}
										<li><span class="text-prodecor">{{ text_manufacturer }}</span><a href="{{ manufacturers }}" class="textdeb">{{ manufacturer }}</a></li>
										{% endif %}
										<li><span class="text-prodecor">{{ text_model }}</span> {{ model }}</li>
										{% if reward %}
										<li><span class="text-prodecor">{{ text_reward }}</span> {{ reward }}</li>
										{% endif %}
									</ul>
									<div id="product">
										{% if options %}
											<hr class="prosp">
											<h3>{{ text_option }}</h3>
											{% for option in options %}
												{% if option.type == 'select' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<select name="option[{{ option.product_option_id }}]" id="input-option{{ option.product_option_id }}" class="form-control">
													<option value="">{{ text_select }}</option>
													{% for option_value in option.product_option_value %}
													<option value="{{ option_value.product_option_value_id }}">{{ option_value.name }}
													{% if option_value.price %}
													({{ option_value.price_prefix }}{{ option_value.price }})
													{% endif %} </option>
													{% endfor %}
													</select>
													</div>
												{% endif %}
												{% if option.type == 'radio' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop">{{ option.name }}</label>
													<div id="input-option{{ option.product_option_id }}" class="custom-radio"> {% for option_value in option.product_option_value %}
													<div class="radio">
													<label>
													<input type="radio" name="option[{{ option.product_option_id }}]" value="{{ option_value.product_option_value_id }}" />
													{% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
													{{ option_value.name }}
													{% if option_value.price %}
													({{ option_value.price_prefix }}{{ option_value.price }})
													{% endif %} </label>
													</div>
													{% endfor %} </div>
													</div>
												{% endif %}
												{% if option.type == 'checkbox' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop">{{ option.name }}</label>
													<div id="input-option{{ option.product_option_id }}"> {% for option_value in option.product_option_value %}
													<div class="checkbox">
													<label>
													<input type="checkbox" name="option[{{ option.product_option_id }}][]" value="{{ option_value.product_option_value_id }}" />
													{% if option_value.image %} <img src="{{ option_value.image }}" alt="{{ option_value.name }} {% if option_value.price %} {{ option_value.price_prefix }} {{ option_value.price }} {% endif %}" class="img-thumbnail" /> {% endif %}
													{{ option_value.name }}
													{% if option_value.price %}
													({{ option_value.price_prefix }}{{ option_value.price }})
													{% endif %} </label>
													</div>
													{% endfor %} </div>
													</div>
												{% endif %}
												{% if option.type == 'text' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control" />
													</div>
												{% endif %}
												{% if option.type == 'textarea' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<textarea name="option[{{ option.product_option_id }}]" rows="5" placeholder="{{ option.name }}" id="input-option{{ option.product_option_id }}" class="form-control">{{ option.value }}</textarea>
													</div>
												{% endif %}
												{% if option.type == 'file' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop">{{ option.name }}</label>
													<button type="button" id="button-upload{{ option.product_option_id }}" data-loading-text="{{ text_loading }}" class="btn btnupload btn-block"><i class="fa fa-upload"></i> {{ button_upload }}</button>
													<input type="hidden" name="option[{{ option.product_option_id }}]" value="" id="input-option{{ option.product_option_id }}" />
													</div>
												{% endif %}
												{% if option.type == 'date' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<div class="input-group date">
													<input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD" id="input-option{{ option.product_option_id }}" class="form-control" />
													<span class="input-group-btn">
													<button class="btn datebtn" type="button"><i class="fa fa-calendar"></i></button>
													</span></div>
													</div>
												{% endif %}
												{% if option.type == 'datetime' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<div class="input-group datetime">
													<input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="YYYY-MM-DD HH:mm" id="input-option{{ option.product_option_id }}" class="form-control" />
													<span class="input-group-btn">
													<button type="button" class="btn datebtn"><i class="fa fa-calendar"></i></button>
													</span></div>
													</div>
												{% endif %}
												{% if option.type == 'time' %}
													<div class="form-group{% if option.required %} required {% endif %}">
													<label class="control-label text-prodecorop" for="input-option{{ option.product_option_id }}">{{ option.name }}</label>
													<div class="input-group time">
													<input type="text" name="option[{{ option.product_option_id }}]" value="{{ option.value }}" data-date-format="HH:mm" id="input-option{{ option.product_option_id }}" class="form-control" />
													<span class="input-group-btn">
													<button type="button" class="btn datebtn"><i class="fa fa-calendar"></i></button>
													</span></div>
													</div>
												{% endif %}
											{% endfor %}
											<hr class="prosp">
										{% endif %}
										{% if recurrings %}
											<hr class="prosp">
											<h3>{{ text_payment_recurring }}</h3>
											<div class="form-group required">
											<select name="recurring_id" class="form-control">
											<option value="">{{ text_select }}</option>
											{% for recurring in recurrings %}
											<option value="{{ recurring.recurring_id }}">{{ recurring.name }}</option>
											{% endfor %}
											</select>
											<div class="help-block" id="recurring-description"></div>
											</div>
										{% endif %}
										<!-- Quantity option -->
										<div class="form-group">
											<div class="row">
												<div class="col-sm-2 col-md-2 col-xs-2 op-box qtlabel">
													<label class="control-label text-prodecorop" for="input-quantity">{{ entry_qty }}</label>
												</div>
												<div class="col-md-10 col-sm-10 col-xs-10 op-box qty-plus-minus">
													<button type="button" class="form-control pull-left btn-number btnminus" disabled="disabled" data-type="minus" data-field="quantity">
													<span class="glyphicon glyphicon-minus"></span>
													</button>
													<input id="input-quantity" type="text" name="quantity" value="{{ minimum }}" size="2" id="input-quantity" class="form-control input-number pull-left" />
													<input type="hidden" name="product_id" value="{{ product_id }}" />
													<button type="button" class="form-control pull-left btn-number btnplus" data-type="plus" data-field="quantity">
													<span class="glyphicon glyphicon-plus"></span>
													</button>
												</div>
											</div>
											<hr class="prosp">
											<button type="button" id="button-cart" data-loading-text="{{ text_loading }}" class="btn add-to-cart btn-primary">{{ button_cart }}</button>
											<button type="button" data-toggle="tooltip" title="{{ button_wishlist }}" class="btn add-to-cart btn-primary" onclick="wishlist.add('{{ product_id }}');"><i class="fa fa-heart"></i></button>
											<button type="button" data-toggle="tooltip" title="{{ button_compare }}" class="btn add-to-cart btn-primary" onclick="compare.add('{{ product_id }}');" ><i class="fa fa-compress"></i></button>
											<hr class="prosp">
										</div>
										<!-- Quantity option end -->
										{% if minimum > 1 %}
											<div class="alert alert-info palert"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
										{% endif %}
									</div>
								</div>
								<!--product Details End -->
								<div class="col-lg-6 col-xs-12 last-part">
									<div class="p-p-price-detail">
										<div>{{ text_stock }} <span class="in-stock">{{ stock }}</span></div>
										{% if price %}
											<ul class="list-unstyled price-desc">
												{% if not special %}
													<li class="text-prodecor-bold">
													<h2 class="pro-price">{{ price }}</h2>
													</li>
												{% else %}
													<!-- <li><span style="text-decoration: line-through;">{{ price }}</span></li> -->
													<li class="text-prodecor-bold"><h2 class="pro-price">{{ special }}</h2></li>
												{% endif %}
												{% if tax %}
													<li>{{ text_tax }} {{ tax }}</li>
												{% endif %} 
												{% if points %}
													<li>{{ text_points }} {{ points }}</li>
												{% endif %}
												{% if discounts %}
													<li>
													<hr class="prosp">
													</li>
												{% for discount in discounts %}
													<li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
												{% endfor %}
												{% endif %}
											</ul>
										{% endif %}
										{% if review_status %}
											<div class="rating">
												<ul class="list-inline">
													<li class="prodrate">{% for i in 1..5 %}
													{% if rating < i %}<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-1x"></i></span>{% else %}<span class="fa fa-stack"><i class="fa fa-star fa-stack-1x"></i><i class="fa fa-star-o fa-stack-1x"></i></span>{% endif %}
													{% endfor %} </li>
													<li class="proreviewre">
													<a id="pro-review" href="" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ reviews }}</a>
													</li>
													<li class="prowritere">
													<a id="pro-writereview" href="#rt" onclick="$('a[href=\'#tab-review\']').trigger('click'); return false;">{{ text_write }}</a>
													</li>
												</ul>
												<hr class="prosp">
												<!-- AddToAny BEGIN -->
												<div class="a2a_kit a2a_kit_size_32 a2a_default_style">
													<a class="a2a_button_facebook"></a>
													<a class="a2a_button_twitter"></a>
													<a class="a2a_button_google_plus"></a>
													<a class="a2a_button_pinterest"></a>
													<a class="a2a_button_linkedin"></a>
													<a class="a2a_dd" href="https://www.addtoany.com/share"></a>
												</div>
												<script async src="https://static.addtoany.com/menu/page.js"></script>
												<!-- AddToAny END -->
											</div>
										{% endif %} 
									</div>
									<div class="custom_img">
										<img src="http://localhost/op278x9_op/image/cache/catalog/1-800x800.png" class="alldevices" alt="" />
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="propage-tab">
					<ul class="nav nav-tabs">
						<li class="active"><a href="#tab-description" data-toggle="tab">{{ tab_description }}</a></li>
						<!--XML Start--->
						{% if product_videos and product_video_display %}
						<li><a href="#tab-video" data-toggle="tab">{{ tab_video }}</a></li>
						{% endif %}
						<!--XML End--->
						<li><a href="#tab-specification" data-toggle="tab">{{ tab_attribute }}</a></li>
						{% if review_status %}
						<li><a href="#tab-review" data-toggle="tab">{{ tab_review }}</a></li>
						{% endif %}
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="tab-description">{{ description }}</div>
						<!--XML Start--->
						{% if product_videos and product_video_display %}
							<div class="tab-pane tab content" id="tab-video">
								<ul class="list-inline">
									{% for product_video in product_videos %}
										<li class="text-center">
											<h4 style="margin-top:0;">{{ product_video['title'] }}</h4>
											<a id="video{{ product_video['product_video_id'] }}" class="thumbnail video_image"title="{{ product_video['title'] }}"> <img src="{{ product_video['image'] }}" style="cursor:pointer" title="{{ product_video['title'] }}" alt="{{ product_video['title'] }}" /><img src="catalog/view/theme/default/image/play.png" class="video_icon" alt=""></a>
										</li>
										<div class="modal fade bd-example-modal-lg" id="product-video{{ product_video['product_video_id'] }}" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
											<div class="modal-dialog modal-lg">
												<div class="modal-content">
													<div class="modal-body">
														<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
														<div class="embed-responsive embed-responsive-16by9">
															<iframe class="embed-responsive-item" src="{{ product_video['video_url'] }}"></iframe>
														</div>
													</div>
												</div>
											</div>
										</div>
									{% endfor %}
								</ul>
							</div>
						{% endif %}
						<!--XML End--->
						{% if attribute_groups %}
							<div class="tab-pane" id="tab-specification">
								<table class="table table-bordered">
									{% for attribute_group in attribute_groups %}
										<thead>
											<tr>
												<td colspan="2"><strong>{{ attribute_group.name }}</strong></td>
											</tr>
										</thead>
										<tbody>
											{% for attribute in attribute_group.attribute %}
												<tr>
													<td class="att-title">{{ attribute.name }}</td>
													<td class="att-desc">{{ attribute.text }}</td>
												</tr>
											{% endfor %}
										</tbody>
									{% endfor %}
								</table>
							</div>
						{% endif %}
						{% if review_status %}
							<div class="tab-pane" id="tab-review">
								<form class="form-horizontal" id="form-review">
									<div id="review"></div>
									<h2 class="heading co-heading">{{ text_write }}</h2>
									{% if review_guest %}
										<div class="form-group required">
											<div class="col-sm-12">
												<label class="control-label" for="input-name">{{ entry_name }}</label>
												<input type="text" name="name" value="{{ customer_name }}" id="input-name" class="form-control" />
											</div>
										</div>
										<div class="form-group required">
											<div class="col-sm-12">
												<label class="control-label" for="input-review">{{ entry_review }}</label>
												<textarea name="text" rows="5" id="input-review" class="form-control"></textarea>
												<div class="help-block">{{ text_note }}</div>
											</div>
										</div>
										<div class="form-group required">
											<div class="col-sm-12">
												<label class="control-label rat">{{ entry_rating }}</label>
												&nbsp;&nbsp;&nbsp; {{ entry_bad }}&nbsp;
												<input type="radio" name="rating" value="1" />
												&nbsp;
												<input type="radio" name="rating" value="2" />
												&nbsp;
												<input type="radio" name="rating" value="3" />
												&nbsp;
												<input type="radio" name="rating" value="4" />
												&nbsp;
												<input type="radio" name="rating" value="5" />
												&nbsp;{{ entry_good }}
											</div>
										</div>
										{{ captcha }}
										<div class="buttons clearfix">
											<div class="pull-right">
												<button type="button" id="button-review" data-loading-text="{{ text_loading }}" class="btn btn-primary">{{ button_continue }}</button>
											</div>
										</div>
									{% else %}
										{{ text_login }}
									{% endif %}
								</form>
							</div>
						{% endif %}
					</div>
				</div>
				<!-- relatedproduct -->
				<div class="pro-bg">
					{% if products %}
						<div class="home-heading"><h2 class="heading">{{ text_related }}</h2></div>
						<div class="pro-nepr row thummargin">
							<div id="related" class="owl-carousel owl-theme">
								{% for product in products %}
									{% if column_left and column_right %}
									{% set class = 'col-xs-8 col-sm-6' %}
									{% elseif column_left or column_right %}
									{% set class = '' %}
									{% else %}
									{% set class = 'col-xs-12 col-sm-12' %}
									{% endif %}
									<div class="{{ class }} product-layout col-xs-12">
										<div class="product-thumb transition">
											<div class="image">
												<a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="img-responsive center-block" /></a>
												{# {% if product.price %}
												{% if product.special %}
												<span class="salepro">sale</span>
												{% endif %}
												{% endif %} #}
											</div>
											<div class="caption text-center">
												<h4><a href="{{ product.href }}">{{ product.name }}</a></h4>
												{% if product.rating %}
													<div class="rating">
														{% for i in 1..5 %}
															{% if product.rating < i %}
															<span class="fa fa-stack">
																<i class="fa fa-star-o fa-stack-2x"></i>
															</span>
															{% else %}
															<span class="fa fa-stack">
															<i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i>
															</span>
															{% endif %}
														{% endfor %}
													</div>
												{% else %}
													<div class="rating">
													{% for i in 1..5 %}
														<span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
													{% endfor %}
													</div>
												{% endif %}
												{% if product.price %}
													<p class="price"> {% if not product.special %}
													{{ product.price }}
													{% else %} <span class="price-new">{{ product.special }}</span> <span class="price-old">{{ product.price }}</span> {% endif %}
													{# {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %} #} </p>
													{% endif %} 
													{% if product.tag_per  %}
													<p class="sale-tag {{ random(['hot','new','sale']) }}">Save {{ product.tag_per }}%</p>

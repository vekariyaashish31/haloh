{% spaceless %}

    {% set specials = combined_product_option['option_special'] %}

    <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover" id="option-special-{{ option_combination_row }}-">
            <thead>
            <tr>
                <td class="text-left">{{ entry_customer_group }}</td>
                <td class="text-left">{{ entry_priority }}</td>
                <td class="text-left">{{ entry_price }}</td>
                <td class="text-left">{{ entry_date_start }}</td>
                <td class="text-left">{{ entry_date_end }}</td>
            </tr>
            </thead>
            <tbody>
            {% set count_groups = 0 %}
            {% if not specials %}
                {% set specials = [] %}
            {% endif %}
            {% for special in specials %}
                {% include element_folder ~'option_special_element_row.twig' %}
                {% set count_groups = count_groups + 1 %}
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td colspan="4"></td>
                <td>
                    <div class="pull-right">
                        <button type="button" data-toggle="tooltip" title=""
                                class="btn btn-primary add-special-customer-group" data-original-title="Add"><i
                                    class="fa fa-plus-circle"></i></button>
                    </div>
                </td>
            </tr>
            </tfoot>
        </table>
    </div>
{% endspaceless %}